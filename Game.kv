# -*- coding: utf-8 -*-
#:kivy 1.0.9

<PongGame>:
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "左边"

    Label:
        font_size: 35
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "右边"